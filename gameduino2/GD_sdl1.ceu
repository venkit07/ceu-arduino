#include "arduino.ceu"

native do
    ##include "EEPROM.h"
    ##include "SPI.h"
    ##include "GD2.h"
end

_GD.begin();

var int fx1=0,fy1=0;
var int fx2=30,fy2=30;

loop do
	if(fx2 == 480) then
		break;
	end
	await 1s;
    _GD.ClearColorRGB(0xffff00);
   	_GD.Clear();
   	_GD.Begin(_RECTS);
   	_GD.ColorRGB(0xff0000);
	_GD.Vertex2ii(fx1, fy1);
	_GD.Vertex2ii(fx2, fy2);
   	_GD.swap();
   	fx2 = fx2 + 30;
   	fy2 = fy2 + 17;
   	fx1 = fx2 - 30;
   	fy1 = fy2 - 30;
end
